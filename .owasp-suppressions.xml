<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">

   <!--
     SUPPRESSION FILE - Tic-Tac-Toe DevSecOps POC
     These are ALL dev-only build tool vulnerabilities.
     Production Docker image = nginx + static files ONLY.
     None of these packages are installed in the container.

     FIX: Use <vulnerabilityName> for GHSA IDs (not <cve> which only accepts CVE-YYYY-NNNNN format)
   -->

   <!-- minimatch ReDoS - only used by eslint internals, never in Docker image -->
   <suppress>
      <notes>minimatch ReDoS GHSA-3ppc-4f35-3m26 - dev dependency inside eslint, not in production</notes>
      <packageUrl regex="true">^pkg:npm/minimatch@.*$</packageUrl>
      <vulnerabilityName>GHSA-3ppc-4f35-3m26</vulnerabilityName>
   </suppress>

   <!-- cross-spawn ReDoS - used only by eslint/vite dev tools -->
   <suppress>
      <notes>cross-spawn ReDoS GHSA-3xgq-45jj-v275 - dev dependency only, not in production Docker image</notes>
      <packageUrl regex="true">^pkg:npm/cross-spawn@.*$</packageUrl>
      <vulnerabilityName>GHSA-3xgq-45jj-v275</vulnerabilityName>
   </suppress>

   <!-- glob CLI injection - used only by eslint (dev tool) -->
   <suppress>
      <notes>glob CLI injection GHSA-5j98-mcp5-4vw2 - dev dependency only, not in production</notes>
      <packageUrl regex="true">^pkg:npm/glob@.*$</packageUrl>
      <vulnerabilityName>GHSA-5j98-mcp5-4vw2</vulnerabilityName>
   </suppress>

   <!-- esbuild dev server issue - only affects vite dev mode, not production nginx build -->
   <suppress>
      <notes>esbuild dev server GHSA-67mh-4wv8-2f99 - only affects `vite dev`, not production build output</notes>
      <packageUrl regex="true">^pkg:npm/esbuild@.*$</packageUrl>
      <vulnerabilityName>GHSA-67mh-4wv8-2f99</vulnerabilityName>
   </suppress>

   <!-- brace-expansion ReDoS - nested dev dependency of eslint -->
   <suppress>
      <notes>brace-expansion ReDoS - dev dependency inside eslint chain, not in production</notes>
      <packageUrl regex="true">^pkg:npm/brace-expansion@.*$</packageUrl>
      <vulnerabilityName>GHSA-v6h2-p8h4-qcjw</vulnerabilityName>
   </suppress>

</suppressions>
