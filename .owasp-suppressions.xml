<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">

   <!--
     SUPPRESSION FILE for Tic-Tac-Toe DevSecOps POC
     These are dev-only build tool vulnerabilities that
     DO NOT exist in the production Docker image.
     Production image only contains: nginx + static HTML/CSS/JS files.
   -->

   <!-- minimatch - used only by eslint (dev tool), not in production build -->
   <suppress>
      <notes>minimatch ReDoS - dev dependency only (eslint), not in Docker image</notes>
      <packageUrl regex="true">^pkg:npm/minimatch@.*$</packageUrl>
      <cve>GHSA-3ppc-4f35-3m26</cve>
   </suppress>

   <!-- cross-spawn - used only by eslint/vite (dev tools), not in production -->
   <suppress>
      <notes>cross-spawn ReDoS - dev dependency only, not in production Docker image</notes>
      <packageUrl regex="true">^pkg:npm/cross-spawn@.*$</packageUrl>
      <cve>GHSA-3xgq-45jj-v275</cve>
   </suppress>

   <!-- glob - used only by eslint (dev tool) -->
   <suppress>
      <notes>glob CLI injection - dev dependency only, not in production</notes>
      <packageUrl regex="true">^pkg:npm/glob@.*$</packageUrl>
      <cve>GHSA-5j98-mcp5-4vw2</cve>
   </suppress>

   <!-- esbuild - vite dev server only, not in production nginx image -->
   <suppress>
      <notes>esbuild dev server - only affects vite dev mode, not production build</notes>
      <packageUrl regex="true">^pkg:npm/esbuild@.*$</packageUrl>
      <cve>GHSA-67mh-4wv8-2f99</cve>
   </suppress>

</suppressions>
